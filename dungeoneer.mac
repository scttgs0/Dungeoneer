
mva             .macro src,dest
                lda \src
                sta \dest
                .endmacro

mvx             .macro src,dest
                ldx \src
                stx \dest
                .endmacro

mwx             .macro src,dest
                ldx #<\src
                stx \dest
                ldx #>\src+1
                stx \dest+1
                .endmacro
